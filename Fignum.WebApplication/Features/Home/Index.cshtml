@model Fignum.WebApplication.Features.Home.IndexViewModel

@{ ViewData["Title"] = "Home Page"; }

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Prime number filter application</p>
</div>

<div class="row mb-4">
    <div class="col">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <a data-toggle="collapse" href="#filters" aria-expanded="true" aria-controls="filters" id="filters-header" class="d-block text-white">
                    <i class="fa fa-chevron-down pull-right"></i>
                    Filters
                </a>
            </div>
            <div id="filters" class="collapse show" aria-labelledby="filters-header">
                <div class="card-body">
                    <form id="primeNumber-filters" asp-controller="Home" asp-action="Index" onkeydown="return event.key !== 'Enter';">
                        <div class="form-group">
                            <label asp-for="PassedInValue"></label>
                            <input asp-for="PassedInValue" class="form-control js-passedInValue" required placeholder="Enter some text" />
                            @if (!String.IsNullOrEmpty(Model.PrimeNumber))
                            {
                                 <small id="primeNumber" class="form-text text-danger js-primeNumber"> Original input is :  @Model.OriginalInput . Removed prime numbers fromt the entered text : @Model.PrimeNumber </small>}
                            @if (Model.PrimeNumber == String.Empty)
                            {
                                <small id="primeNumber" class="form-text  text-success js-primeNumber"> There is no prime number found in entered string.</small>}
                        </div>
                        <button type="submit" class="btn btn-primary">Prime Number Filter</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/features/Home/home.js"></script>
}
